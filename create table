	ID_TIME_ESTATISTICA NUMERIC(10),
	ID_TIME NUMERIC(10),
	ID_TEMPORADA NUMERIC(10),
	games NUMERIC(10),
    fastBreakPoints NUMERIC(10),
    pointsInPaint NUMERIC(10),
    biggestLead NUMERIC(10),
    secondChancePoints NUMERIC(10),
    pointsOffTurnovers NUMERIC(10),
    longestRun NUMERIC(10),
    points NUMERIC(10),
    fgm NUMERIC(10,2),
    fga NUMERIC(10,2),
    fgp NUMERIC(10,2),
    ftm NUMERIC(10),
    fta NUMERIC(10),
    ftp NUMERIC(10,2),
    tpm NUMERIC(10,2),
    tpa NUMERIC(10,2),
    tpp NUMERIC(10,2),
