    biggestLead NUMERIC(10),
    secondChancePoints NUMERIC(10),
    pointsOffTurnovers NUMERIC(10),
    longestRun NUMERIC(10),
    points NUMERIC(10),
    fgm NUMERIC(10,2),
    fga NUMERIC(10,2),
    fgp NUMERIC(10,2),
    ftm NUMERIC(10,2),
    fta NUMERIC(10,2),
    ftp NUMERIC(10,2),
    tpm NUMERIC(10,2),
    tpa NUMERIC(10,2),
    tpp NUMERIC(10,2),
    offReb NUMERIC(10),
    defReb NUMERIC(10),
    totReb NUMERIC(10),
    assists NUMERIC(10),
    pFouls NUMERIC(10),
    steals NUMERIC(10),
    turnovers NUMERIC(10),
    blocks NUMERIC(10),
    plusMinus NUMERIC(10,2),
    min VARCHAR(10)
)

