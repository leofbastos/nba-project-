    steals NUMERIC(10,2),
    turnovers NUMERIC(10,2),
    blocks NUMERIC(10,2),
    plusMinus NUMERIC(10,2)
) 

create table NBA_JOGADOR_ESTATISTICA_PARTIDA (
	ID_JOGADOR_ESTATISTICA NUMERIC(10),
	ID_JOGADOR NUMERIC(10),
	ID_TEMPORADA NUMERIC(10),
	ID_TIME NUMERIC(10),
	ID_PARTIDA NUMERIC(10),
	points NUMERIC(10),
    pos VARCHAR(10),
    min NUMERIC(10,2),
    fgm NUMERIC(10,2),
    fga NUMERIC(10,2),
    fgp NUMERIC(10,2),
    ftm NUMERIC(10,2),
    fta NUMERIC(10,2),
    ftp NUMERIC(10,2),
    tpm NUMERIC(10,2),
